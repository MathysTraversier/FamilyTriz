@model MvcFamilyTriz.Models.Eleve

@{
    ViewData["Title"] = "Details";
}

<h2>@Html.DisplayFor(model => model.nom) @Html.DisplayFor(model => model.prenom)</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.promotion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.promotion)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.famille.couleur)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.famille.couleur)
        </dd>
        @if (Model.parrain != null)
            {
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.parrain)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.parrain.prenom) @Html.DisplayFor(model => model.parrain.nom)
                </dd>
            }
    </dl>
</div>
<div>
    <a asp-action="Index">Retour à la liste des élèves</a>
</div>