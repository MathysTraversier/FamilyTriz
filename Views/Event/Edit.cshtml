@model MvcFamilyTriz.Models.Evenement

@{
    ViewData["Title"] = "Édition";
}

<h2>Modification des caractéristiques d'un événement</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" asp-for="nbPointRouge" />
            <input type="hidden" asp-for="nbPointVert" />
            <input type="hidden" asp-for="nbPointBleu" />
            <input type="hidden" asp-for="nbPointJaune" />
            <input type="hidden" asp-for="nbPointOrange" />
            <div class="form-group">
                <label asp-for="nom" class="control-label"></label>
                <input asp-for="nom" class="form-control" />
                <span asp-validation-for="nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea asp-for="description" class="form-control" ></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbPointAGagner" class="control-label"></label>
                <input asp-for="nbPointAGagner" class="form-control" />
                <span asp-validation-for="nbPointAGagner" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="date" class="control-label"></label>
                <input asp-for="date" class="form-control" />
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des événements</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}