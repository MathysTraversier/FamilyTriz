@model MvcFamilyTriz.Models.Evenement

@{
    ViewData["Title"] = "Points";
}

<h2>Attribution des points de l'événement à chaque famille</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePoints">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nbPointRouge" class="control-label"></label>
                <input asp-for="nbPointRouge" class="form-control" />
                <span asp-validation-for="nbPointRouge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbPointVert" class="control-label"></label>
                <input asp-for="nbPointVert" class="form-control" />
                <span asp-validation-for="nbPointVert" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbPointBleu" class="control-label"></label>
                <input asp-for="nbPointBleu" class="form-control" />
                <span asp-validation-for="nbPointBleu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbPointJaune" class="control-label"></label>
                <input asp-for="nbPointJaune" class="form-control" />
                <span asp-validation-for="nbPointJaune" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nbPointOrange" class="control-label"></label>
                <input asp-for="nbPointOrange" class="form-control" />
                <span asp-validation-for="nbPointOrange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sauvegarder" class="btn btn-primary mt-2 mb-2" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retour à la liste des événements</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}